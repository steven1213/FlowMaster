# FlowMaster 生产环境配置
# 数据库配置
DB_HOST=mysql-service
DB_PORT=3306
DB_NAME=flowmaster_user
DB_USERNAME=flowmaster
DB_PASSWORD=flowmaster123

# Redis配置
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=flowmaster123
REDIS_DATABASE=0

# MongoDB配置
MONGO_HOST=mongodb-service
MONGO_PORT=27017
MONGO_DATABASE=flowmaster_logs
MONGO_USERNAME=flowmaster
MONGO_PASSWORD=flowmaster123

# Elasticsearch配置
ES_HOST=elasticsearch-service
ES_PORT=9200

# Nacos配置
NACOS_HOST=nacos-service
NACOS_PORT=8848
NACOS_USERNAME=nacos
NACOS_PASSWORD=nacos123

# Zipkin配置
ZIPKIN_HOST=zipkin-service
ZIPKIN_PORT=9411

# JWT配置
JWT_SECRET=FlowMasterJWTKey1234567890
JWT_EXPIRATION=86400

# 加密配置
ENCRYPTION_KEY=FlowMasterEncryptionKey1234567890

# 应用配置
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/flowmaster/flowmaster.log

# 监控配置
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# 前端配置
VITE_API_BASE_URL=https://api.flowmaster.local
VITE_APP_TITLE=FlowMaster
VITE_APP_VERSION=1.0.0

# 安全配置
SECURITY_REQUIRE_SSL=true
SECURITY_HEADERS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://flowmaster.local,https://admin.flowmaster.local

# 性能配置
JVM_OPTS=-Xms1024m -Xmx2048m -XX:+UseG1GC -XX:+UseStringDeduplication
TOMCAT_MAX_THREADS=200
TOMCAT_MIN_SPARE_THREADS=10
