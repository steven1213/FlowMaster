{
  "name": "flowmaster-mobile",
  "version": "1.0.0",
  "description": "FlowMaster Mobile应用 - 工作流管理系统移动端",
  "private": true,
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace FlowMasterMobile.xcworkspace -scheme FlowMasterMobile -configuration Release -destination generic/platform=iOS -archivePath FlowMasterMobile.xcarchive archive"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "@react-navigation/bottom-tabs": "^6.5.0",
    "@react-navigation/drawer": "^6.6.0",
    "react-native-screens": "^3.25.0",
    "react-native-safe-area-context": "^4.7.0",
    "react-native-gesture-handler": "^2.12.0",
    "react-native-reanimated": "^3.5.0",
    "@reduxjs/toolkit": "^2.0.0",
    "react-redux": "^9.0.0",
    "redux-persist": "^6.0.0",
    "react-native-keychain": "^8.1.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-paper": "^5.10.0",
    "react-native-elements": "^3.4.0",
    "axios": "^1.6.0",
    "@react-native-async-storage/async-storage": "^1.19.0",
    "react-native-push-notification": "^8.1.0",
    "react-native-permissions": "^3.10.0",
    "react-native-image-picker": "^7.0.0",
    "react-native-document-picker": "^9.1.0",
    "react-native-pdf": "^6.7.0",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "^13.14.0",
    "dayjs": "^1.11.0",
    "lodash-es": "^4.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.0",
    "@react-native/metro-config": "^0.72.0",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.0",
    "@types/react-test-renderer": "^18.0.0",
    "@types/lodash-es": "^4.17.0",
    "babel-jest": "^29.2.0",
    "eslint": "^8.0.0",
    "jest": "^29.2.0",
    "metro-react-native-babel-preset": "0.76.0",
    "prettier": "^2.4.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "react-native"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
